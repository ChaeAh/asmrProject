<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper    
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <!-- 쿼리를 적으면 된다 -->
<mapper namespace="com.asmr.mapper.AsmrMapper">
	<!-- 유저생성 -->
	<insert id="userInsert">
		insert into asmruser(num,id,password,name,phone)
		values(asmr_seq.nextval,#{id},#{password},#{name},#{phone})
	</insert>
	
	<!-- 아이디 중복 체크 -->
	<select id="idCheck" resultType="Integer">
		select count(*)
		from asmruser
		where id = #{userid}
	</select>
	
	<!-- 로그인 -->
	<select id="login" resultType="Integer">
		select count(*)
		from asmruser
		where id=#{id} and password=#{password}
	</select>
	
	<!-- 본인음악조합저장 -->
	<insert id="soundsave">
		insert into asmrsave(num,sound,username)
		values(save_seq.nextval,#{sound},#{username})
	</insert>
	
	<!-- 저장 전 동일 이름 있는지 체크 -->
	<select id="nameCheck" resultType="Integer">
		select count(*)
		from asmrsave
		where username = #{name}
	</select>
	
	<!-- 저장된 파일 있을 시 수정으로 작동 -->
	<update id="soundUpdate">
		update asmrsave
		set sound = #{sound}
		where username = #{username}
	</update>
	
	<!-- 저장된 배열 불러오기 -->
	<select id="soundLoad" resultType="com.asmr.model.SaveDTO">
		select *
		from asmrsave
		where username = #{username}
	</select>

	<!-- 댓글창 불러오기 -->
	<select id="commentList" resultType="com.asmr.model.CommentDTO">
		select *
		from asmrcomment
	</select>
	
	<!-- 댓글쓰기 -->
	<insert id="commentInsert">
		insert into asmrcomment(num,writer,regdate,msg)
		values(com_seq.nextval,#{writer},sysdate,#{msg})
	</insert>
</mapper>